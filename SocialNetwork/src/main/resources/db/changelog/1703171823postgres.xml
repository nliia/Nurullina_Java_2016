<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="1703171823_1" author="nliia">
        <createTable tableName="messages">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="date" type="timestamp without time zone"/>
            <column name="text" type="varchar(255)"/>
            <column name="sender" type="bigint"/>
            <column name="room_id" type="bigint"/>
        </createTable>
    </changeSet>
    <changeSet id="1703171823_2" author="nliia">
        <addForeignKeyConstraint baseTableName="messages"
                                 baseColumnNames="sender"
                                 constraintName="messages_sender_user_id_fk"
                                 referencedTableName="users"
                                 referencedColumnNames="id"/>
    </changeSet>
    <changeSet id="1703171823_3" author="nliia">
        <addForeignKeyConstraint baseTableName="messages"
                                 baseColumnNames="room_id"
                                 constraintName="messages_room_id_user_id_fk"
                                 referencedTableName="rooms"
                                 referencedColumnNames="id"/>
    </changeSet>

</databaseChangeLog>